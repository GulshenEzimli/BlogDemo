@model NewsLetterModel

<div class="tech-btm">
    <img src="~/web/images/banner1.jpg" class="img-fluid" alt="">
</div>
<div class="tech-btm">
    <h4>Sign up to our newsletter</h4>
    <p>With subscribe stay up to date with the latest news</p>
    <form asp-controller="NewsLetter" asp-action="SubscribeMail" asp-route-returnUrl="@ViewBag.returnUrl">
        <input type="email" placeholder="Email" required="" asp-for="Mail" />
        <input type="submit" value="Subscribe" />
    </form>

</div>